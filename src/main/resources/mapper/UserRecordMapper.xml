<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bookkeeping.mapper.UserRecordMapper">

  <resultMap id="BaseResultMap" type="com.bookkeeping.pojo.UserRecord">
  
    <result column="id" jdbcType="VARCHAR" property="id" />
    <result column="year" jdbcType="CHAR" property="year" />
    <result column="month" jdbcType="CHAR" property="month" />
    <result column="day" jdbcType="CHAR" property="day" />
    <result column="date" jdbcType="DATE" property="date" />
    <result column="cost" jdbcType="VARCHAR" property="cost" />
    <result column="type" jdbcType="VARCHAR" property="type" />
    
  </resultMap>
  
  <!-- 查询表是否存在 -->
  <select id="existTable" parameterType="String" resultType="Integer">  
	    select count(*)  
	    from information_schema.TABLES  
	    where table_name = #{tableName} 
  </select>
  
  <!-- 删除表 -->
   <update id="dropTable">  
    	DROP TABLE IF EXISTS ${tableName} 
  </update>  
  
  <!-- 创建表 -->
  <update id="createTable" parameterType="String">  
		CREATE TABLE ${tableName} (
		  `id` CHAR(20) NOT NULL COMMENT 'id',
		  `year` CHAR(4) NOT NULL COMMENT '年份',
		  `month` CHAR(2) NOT NULL COMMENT '月份',
		  `day` CHAR(2) NOT NULL COMMENT '日',
		  `date` DATETIME NOT NULL COMMENT '日期时间',
		  `cost` CHAR(10) NOT NULL COMMENT '花费',
		  `type` CHAR(5) NOT NULL COMMENT '种类'
		);
  </update> 
  

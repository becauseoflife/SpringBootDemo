  <insert id="insertRecord"  parameterType="com.bookkeeping.pojo.UserRecord">
  		insert into ${tableName} 
  			(	id, year, month, day, date, cost, type) 
  		value 
  			(	#{userRecord.id},
  				#{userRecord.year},
  				#{userRecord.month},
  				#{userRecord.day},
  			 	#{userRecord.date},
  			 	#{userRecord.cost},
  			    #{userRecord.type}
  			 );
  </insert>
  
  <!-- 查找消费记录 -->
  <select id="queryYearCost" resultType="String" statementType="STATEMENT">
  		select
  			cost
  		from
  		 	${tableName}
  		where 
  			${yearFieldName} = '${yearFieldValue}'
  </select>
  
   <select id="queryMonthCost" resultType="String" statementType="STATEMENT">
  		select
  			cost
  		from
  		 	${tableName}
  		where 
  			${yearFieldName} = '${yearFieldValue}' 
  		and 
  			${monthFieldName} = '${monthFieldValue}' 
  </select>

  <select id="queryTodayCost" resultType="String" statementType="STATEMENT">
  		select
  			cost
  		from
  		 	${tableName}
  		where 
  			${yearFieldName} = '${yearFieldValue}' 
  		and 
  			${monthFieldName} = '${monthFieldValue}' 
  		and 
  			${todayFieldName} = '${todayFieldValue}' 
  </select>
  
